<h1>Commerces#show</h1>
<%= link_to "Commerces", commerces_path %>
<p>Find me in app/views/commerces/show.html.erb</p>
<%= @commerce.name %>

<ul class="list-group">

  <% @commerce.products.each do |product| %>
    <li class="list-group-item"><%= product.name %></li>
    <%= simple_form_for [@commerce, product, @cart_item] do |f| %>
      <%= f.input :quantity %>
      <%= f.submit %>
    <% end %>
  <% end %>
  <li class="list-group-item">
    <%= image_tag @commerce.products.last.photo, width:150 %>
    <%= @commerce.products.last.name %>
    <%= simple_form_for [@commerce, @commerce.products.last, @cart_item] do |f| %>
      <%= f.input :quantity %>
      <%= f.submit "Ajouter", class: "btn btn-green" %>
    <% end %>
  </li>
</ul>

<h2>Cart Items</h2>
<ul>
  <%= session[:cart] %>
</ul>

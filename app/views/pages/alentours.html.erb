<main id="alentours">
  <header>
    <h1><%= t('alentours.title').capitalize %></h1>
  </header>
  <section class="cards">
    <% @cards.each do |card| %>
      <div class="card">
        <%= image_tag "#{card[:photo]}" %>
        <div class="footer">
          <h2><%= card[:name] %></h2>
          <div class="hide-content">
            <p class="more">En savoir plus</p>
            <p class="content">
              <%= card[:description] %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </section>
<%= link_to 'ligne maginot', ligne_maginots_path %>
</main>
<%= javascript_pack_tag "application" %>
